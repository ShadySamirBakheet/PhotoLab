<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.loginSystem.ForgotPasswordActivity">

    <ProgressBar
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="@dimen/_16sdp"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_16sdp"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:contentDescription="@string/app_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:text="@string/app_name"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/txtColor1"
                android:textSize="@dimen/_20ssp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_16sdp"/>

            <LinearLayout
                android:id="@+id/checkNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/input1"
                    android:hint="@string/user_name"
                    android:inputType="textPersonName"
                    android:padding="@dimen/_12sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/forgotPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:text="@string/forgot_password"
                    android:gravity="center"
                    android:background="@drawable/btn_app3"
                    style="@style/btnStyleHome"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/changePasswordLay"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/_26sdp"
                    android:padding="@dimen/_36sdp"
                    android:text="@string/checkYouEmial"/>

                <TextView
                    android:id="@+id/changePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_16sdp"
                    android:text="@string/ok"
                    android:gravity="center"
                    android:background="@drawable/btn_app3"
                    style="@style/btnStyleHome"/>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>
