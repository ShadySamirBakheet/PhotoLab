<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools">


    <style name="toolBarTitle">
        <item name="android:textColor">@color/txtColor1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="btnStyleHome">
        <item name="android:background">@drawable/btn_app</item>
        <item name="android:textColor">@color/txtColor2</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:drawableTint" tools:ignore="NewApi">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">@dimen/_20ssp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">@dimen/_10sdp</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>
