    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="shady.samir.photolab.views.home.ui.PostFragment"
        android:label="Posts"
        tools:layout="@layout/fragment_post" />

    <fragment
        android:id="@+id/navigation_album"
        android:name="shady.samir.photolab.views.home.ui.AlbumFragment"
        android:label="Albums"
        tools:layout="@layout/fragment_album" />

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="shady.samir.photolab.views.home.ui.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites" />
